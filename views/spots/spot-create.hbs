<h1>Create A New Spot</h1>
<form action="/create-spot" method="POST" enctype="multipart/form-data">
 
 
  <label>Name</label>
  <input type="text" name="name" />

  <label>Type</label>
  <select name="type">
    <option value="0">Select type</option>
    <option value="1">Bar</option>
    <option value="2">Restaurant</option>
    <option value="3">Rooftop</option>
    <option value="4">Park</option>
    <option value="5">Museum</option>
    <option value="6">Viewpoint</option>
    <option value="7">Monument</option>
  </select>

  <label>Location</label>
  <input type="text" name="location" />

  <label>Budget</label>
  <select name="budget">
    <option value="0">Select budget</option>
    <option value="Free (Public Space)">Free (Public Space) </option>
    <option value="Cheap (below 10€)">Cheap (below 10€) </option>
    <option value="Average">Average </option>
    <option value="Expensive (above 50€)">Expensive (above 50€) </option>
  </select>

  <label>Image</label>
  <input type="file" name="image" />

  <label>Description</label>
  <textarea rows="5" cols="20" name="description"></textarea>

  <button type="submit">Create</button>
</form>