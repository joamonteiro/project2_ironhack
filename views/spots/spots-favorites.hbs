<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="fav-h">My favorites</h1>
      <ul class="cont-spot-items">
        {{#each favorites}}
          <li class="spot-item bg">
            {{#if loggedInUser}} {{! not working }}
              <div class="spot-i-fav">
                <form action="/favorite-spots/{{spot.id}}" method="POST">
                    <button type="submit">Add to favourites</button>
                  </form>
              </div>
              {{/if}}
              <a href="/spots/{{id}}">
                <img src="{{imageUrl}}" width="200vw">
              </a>
              <h5 class="spot-item-inf">{{type}}</h5>
              <div class="spot-item-inf">
                <a href="/spots/{{id}}">{{name}}</a>
                <br>
                <p><i class="fas fa-map-marker-alt"></i>{{location}}</p>
              </div>
          </li>
        {{/each}}
      </ul>    
    </div>
  </div>
</div>