<div class="container">
    <div class="row">
        <h1>{{name}}</h1>
        <h2>{{type}}</h2>

        <h3>{{location}}</h3>
        <h3>Budget: {{budget}}</h3>
    </div>
    <div class="row">
        <img src="{{imageUrl}}" alt="{{name}}"/>
    </div>
    <div class="row">
        <h4>{{user.username}}</h4>
        <a href="/user/{{user._id}}">check profile</a>
        <h4>{{createdAt}}</h4>
        <p>{{description}}</p>
    </div>
</div>